@model IEnumerable<PingSite.Core.DTO.RoomDto>

<div class="container">
    <div class="row">
        <div class="col-lg" style="text-align: center;">
            <h1>Rooms</h1>
        </div>
    </div>
</div>

<div class="container container-back">
    <div class="row">
        <div class="col-lg" style="text-align: center;">
            <a asp-controller="Room" asp-action="Add" asp-route-id="@ViewBag.BuildingId" class="btn btn-primary" style="margin-bottom: 10px;">Add</a>
        </div>
    </div>

    @foreach (var room in Model)
    {
        <div class="row">
            <div class="col-lg">
                <div class="list">
                    <img src="~/images/room.png" width="30" height="37"> <a asp-controller="Home" asp-action="Hosts" asp-route-id="@room.Id">@room.Name</a>
                    <div class="options">
                        <a asp-controller="Room" asp-action="Edit" asp-route-id="@room.Id" asp-route-buildingId="@ViewBag.BuildingId" class="btn btn-outline-primary">Edit</a>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deleteModal" onclick="setHrefForDelete('/Room/Delete/@room.Id?buildingId=@ViewBag.BuildingId')">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Room</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Close</button>
                <a id="deleteHostModal" href="#" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
            </div>
        </div>
    </div>
</div>