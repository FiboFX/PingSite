@model PingSite.Models.Host.ListHosts

<div class="container">
    <div class="row">
        <div class="col-lg" style="text-align: center;">
            <h1>All Hosts</h1>
        </div>
    </div>
</div>

<div class="container container-back">
    @foreach (var category in Model.Categories)
    {
        @if (Model.Hosts.Where(x => x.CategoryId == category.Id).Count() > 0)
        {
            <div class="row" style="padding: 15px;">
                <div class="col-lg">
                    <h3>@category.Name</h3>
                </div>
            </div>
        }
        @foreach (var host in Model.Hosts)
        {
            @if (category.Id == host.CategoryId)
            {
                <div class="row">
                    <div class="col-lg">
                        <div class="list">
                            <img src="@host.ImgUrl" width="37" height="37">
                            @if (host.LastStatus)
                            {
                                <span style="color: green"><b>@host.Name</b></span>
                            }
                            else
                            {
                                <span style="color: red"><b>@host.Name</b></span>
                            }
                            <div class="options">
                                <a href="#" class="btn btn-outline-success">Details</a>
                                <a asp-controller="Host" asp-action="Edit" asp-route-id="@host.Id" asp-route-roomId="@host.RoomId" asp-route-allHosts="true" class="btn btn-outline-primary">Edit</a>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deleteModal" onclick="setHrefForDelete('/Host/Delete/@host.Id?roomId=@ViewBag.RoomId')">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Host</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Close</button>
                <a id="deleteHostModal" href="#" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    let allHostsNav = document.getElementById('allHostsNav');
    allHostsNav.classList.add('active');
</script>