@model IEnumerable<PingSite.Core.DTO.HostDto>

<div class="row">
    <div class="col-lg" style="text-align: center;">
        <h1>Hosts</h1>
        <a asp-controller="Host" asp-action="Add" asp-route-id="@ViewBag.RoomId" class="btn btn-primary" style="margin-bottom: 10px;">Add</a>
    </div>
</div>

@foreach (var h in Model)
{
    <div class="row">
        <div class="col-lg">
            <div class="list">
                <img src="@h.ImgUrl" width="37" height="37">
                @if (h.LastStatus)
                {
                    <span style="color: green"><b>@h.Name</b></span>
                }
                else
                {
                    <span style="color: red"><b>@h.Name</b></span>
                }
                <div class="options">
                    <a asp-controller="Host" asp-action="Edit" asp-route-id="@h.Id" asp-route-roomId="@ViewBag.RoomId" class="btn btn-outline-primary">Edit</a>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deleteModal" onclick="setHrefForDelete('/Host/Delete/@h.Id?roomId=@ViewBag.RoomId')">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Host</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Close</button>
                <a id="deleteHostModal" href="#" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
            </div>
        </div>
    </div>
</div>