@model IEnumerable<PingSite.Core.DTO.CategoryDto>

@{ 
    Layout = "SettingsLayout";
}

<div class="row">
    <div class="col-lg" style="text-align: center;">
        <h2>Categories</h2>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-lg" style="text-align: center; margin-bottom: 15px;">
        <a asp-controller="Category" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i> Add</a>
    </div>
</div>

<table class="table table-striped">
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td style="max-width: 20px;"><img src="@category.ImgUrl" width="37" height="37" /></td>
                <th>@category.Name</th>
                <td style="float: right">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" onclick="setHrefForDelete('/Category/Delete/@category.Id')">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Close</button>
                <a id="deleteHostModal" href="#" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
            </div>
        </div>
    </div>
</div>

<script>
    let categoriesSettings = document.querySelector("#categoriesSettings");
    categoriesSettings.classList.add('active');
    let settingsNav = document.getElementById('settingsNav');
    settingsNav.classList.add('active');
</script>