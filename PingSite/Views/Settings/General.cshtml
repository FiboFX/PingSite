@model PingSite.Core.DTO.Settings

@{
    Layout = "SettingsLayout";
}

<div class="row">
    <div class="col-lg" style="text-align: center;">
        <h2>General</h2>
    </div>
</div>
<hr />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-lg" style="text-align: center;">
            <h4><i class="fas fa-redo-alt"></i> AutoPing</h4>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-11 col-form-label">On/Off</label>
        <div class="col-lg-1">
            <label class="switch">
                @Html.CheckBoxFor(x => x.AutoPing)
                <span class="slider round"></span>
            </label>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-10 col-form-label">Delay(in minutes, 1 - 59)</label>
        <div class="col-lg-2">
            @Html.TextBoxFor(x => x.AutoPingDelay, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(x => x.AutoPingDelay, "", new { @class = "text-danger" })
    </div>
    <hr />
    <div class="row">
        <div class="col-lg" style="text-align: center;">
            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Save settings</button>
        </div>
    </div>
}

<script type="text/javascript">
    let activeSettings = document.getElementById('generalSettings');
    activeSettings.classList.add('active');
    let settingsNav = document.getElementById('settingsNav');
    settingsNav.classList.add('active');
</script>
