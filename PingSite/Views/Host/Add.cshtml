@model PingSite.Models.Host.AddHost

@{ 
    var categories = new List<SelectListItem>();
    foreach (var category in Model.Categories)
    {
        categories.Add(new SelectListItem() { Text = category.Name, Value = category.Id.ToString() });
    }
}

<div class="container">
    <div class="row">
        <div class="col-lg" style="text-align: center;">
            <h1>Add Host</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg">
            <div class="card form-card">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(x => x.RoomId)
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>MAC Address (Optional)</label>
                            @Html.TextBoxFor(x => x.MACAddress, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Category</label>
                            @Html.DropDownListFor(x => x.CategoryId, categories, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> Add</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>